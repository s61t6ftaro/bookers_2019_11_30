<html>
<body>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li>error <%= message %></li>
    </ul>
  <% end %>
  </div>
<% end %>
    <div class='body'>
      <div class='container'>
        <%= flash[:success] %>
        <div class='row'>
          <div class='col-xs-3'>
            <h2>User info</h2>
            <%= attachment_image_tag current_user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg",class:"attachment user profile_image" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= current_user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= current_user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to "",edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            </div>
            <h2>New book</h2>
            <%= render 'books/form', booknew: @booknew %>
          </div>
          <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <th>
                      <%= link_to user_path(book.user.id) do %>
                        <%= attachment_image_tag book.user, :profile_image,format: 'jpeg',size: "40x40",fallback: "no_image.jpg" %>
                      <% end %>
                    </th>
                    <th><%=link_to book.title, "/books/#{book.id}" %></th>
                    <th><%= book.body %></th>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <div class='container'>
  	    <div class='row'>
    	    <div class='col-xs-3 col-xs-offset-9'>
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
  </body>
</html>
