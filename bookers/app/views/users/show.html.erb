<!DOCTYPE html>
<html>
  <body>
    <div class='body'>
      <div class='container'>
      	<div class='row'>
          <div class='col-xs-3'>
            <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image,size: "100x100",class:"attachment user profile_image",fallback: "no_image.jpg" %></td>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class='row'>
              <% if  @user.id == current_user.id %>
                <%= link_to "",edit_user_path,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" %>
              <% else %>
                <%= link_to "",user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
              <% end %>
            </div>
            <h2>New book</h2>
            <%= render 'books/form', booknew: @booknew %>
          </div>  
          <div class='col-xs-9'>
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody class="table table-hover table-inverse">
                <% @books.each do |book| %>
                  <tr>
                    <td><%= attachment_image_tag book.user,:profile_image,format: 'jpeg',size: "40x40" %></td>
                    <td><%=link_to book.title, "/books/#{book.id}" %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  

    <footer>
        <div class='container'>
  	        <div class='row'>
    	        <div class='col-xs-3 col-xs-offset-9'>
    		        <p>CopyRight Infratop.inc</p>
    	        </div>
            </div>
        </div>
    </footer>
  </body>
</html>
