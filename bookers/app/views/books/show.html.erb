<!DOCTYPE html>
<html>
  <body>
    <div class='body'>
      <div class='container'>
        <div class='row'>
            <div class='col-xs-3'>
                <h2>User info</h2>
                <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg" %></td>
                <h4>name</h4>
                <%= @book.user.name %>
                <h4>introduction</h4>
                <%= @book.user.introduction %><br>
                <%= link_to "edit",user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
                    <div class='row'>
                    </div>
                    <h2>New book</h2>
                    <%= form_for(@book) do |f| %>
                        <%= f.text_field :title %>
                        <h4>Opinion</h4>
                        <%= f.text_area :body %><br />
                        <%= f.submit 'Create Book' %>
                    <% end %>
                    </div>

                    <div class='col-xs-9'>
                        <h2>Book detail</h2>
                        <%= link_to user_path(@book.user.id) do %>
                          <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg" %>
                          <%= @book.user.name %>
                        <% end %>
                        <p><%= @book.title %></p>
                        <p><%= @book.body %></p>
                        <%= link_to "edit",edit_book_path,class:"btn-sm btn-success" %>
                        <%= link_to 'destroy',destroy_book_path,method: :delete, "data-confirm" => "本当に削除しますか？" %>
                    </div>
                </div>
            </div>
        </div>

    <footer>
        <div class='container'>
  	        <div class='row'>
    	        <div class='col-xs-3 col-xs-offset-9'>
    		        <p>CopyRight Infratop.inc</p>
    	        </div>
            </div>
        </div>
    </footer>
  </body>
</html>
