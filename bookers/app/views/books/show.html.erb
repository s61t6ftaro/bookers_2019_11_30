<!DOCTYPE html>
<html>
  <body>
    <div class='body'>
      <div class='container'>
        <div class='row'>
          <div class='col-xs-3'>
            <h2>User info</h2>
            <div class="row">                
              <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg",class:"attachment user profile_image" %></td>
              <table class="table">
                <tbody>
                  <tr><tr>
                  <tr>
                    <th>name<th>
                    <th><%= @book.user.name %><th>
                  <tr>
                    <th>introduction<th>
                    <th><%= @book.user.introduction %></th>
                  <tr>
                </tbody>
              </table>
              <div class="row">            
                <%= link_to "",user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
              </div>
              <h2>New book</h2>
              <%= form_for(@book) do |f| %>
                <div class="field row">
                  <label for="book_title">Title</label>
                  <%= f.text_field :title,class:"col-xs-12 book_title" %>
                </div>
                <div class="field row">
                  <label for="book_opinion">Opinion</label>
                  <%= f.text_area :body,class:"col-xs-12 book_body" %>
                </div>
                <div class="actions row">
                  <%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %>
                </div>
              <% end %>
            </div>

          <div class='col-xs-9'>
                        <h2>Book detail</h2>
                        <%= link_to user_path(@book.user.id) do %>
                          <%= attachment_image_tag @book.user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg" %>
                          <%= @book.user.name %>
                        <% end %>
                        <p><%= @book.title %></p>
                        <p><%= @book.body %></p>
                        <%= link_to "edit",edit_book_path,class:"btn-sm btn-success" %>
                        <%= link_to 'destroy',destroy_book_path,method: :delete, "data-confirm" => "本当に削除しますか？" %>
                    </div>
                </div>
            </div>
        </div>

    <footer>
        <div class='container'>
  	        <div class='row'>
    	        <div class='col-xs-3 col-xs-offset-9'>
    		        <p>CopyRight Infratop.inc</p>
    	        </div>
            </div>
        </div>
    </footer>
  </body>
</html>
