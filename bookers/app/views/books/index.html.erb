  <body>
    <div class='body'>
      <div class='container'>
        <%= flash[:success] %>
      	<div class='row'>
          <div class='col-xs-3'>
            <h2>User info</h2>
            <div class='row'>
              <%= attachment_image_tag current_user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg" %></td>
              <h4>name</h4>
              <%= current_user.name %>
              <h4>introduction</h4>
              <%= current_user.introduction %><br>
              <%= link_to "edit",edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            </div>
            <div class="row">
              <h2>New book</h2>
              <%= form_for(@book) do |f| %>
                <h4>Title</h4>
                <%= f.text_field :title %>
                <h4>Opinion</h4>
                <%= f.text_area :body %><br />
                <%= f.submit 'Create Book' %>
              <% end %><br />
            </div>
            <div class="row">
              <% @books.each do |book| %>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image,format: 'jpeg',size: "100x100",fallback: "no_image.jpg" %>
                <% end %>
                <p><%=link_to book.title, "/books/#{book.id}" %>
                <span><%= book.body %></span>
                <%= link_to 'destroy',destroy_book_path(book),method: :delete, "data-confirm" => "本当に削除しますか？" %></p><br>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer>
